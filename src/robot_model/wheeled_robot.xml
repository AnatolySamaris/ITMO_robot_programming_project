<mujoco model="Differential Drive Robot">
  <compiler angle="radian" inertiafromgeom="true"/>

  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.002"/>

  <default>
    <default class="wheel">
      <geom type="cylinder" size="0.035 0.02" contype="1" conaffinity="1"
            friction="1.0 0.05 0.05"/>
    </default>
  </default>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <light directional="true" diffuse=".8 .8 .8" specular="0.2 0.2 0.2" pos="0 0 5" dir="0 0 -1"/>

    <!-- Робот -->
    <body name="chassis" pos="0 0 0.05">

      <!-- Корпус-->
      <joint type="free"/>
      <inertial mass="10.0" pos="0 0 0" diaginertia="0.008 0.008 0.008"/>
      <geom name="base" type="cylinder" size="0.1 0.02" rgba="0.2 0.6 0.8 1" contype="1" conaffinity="0"/>
      <geom type="box" size="0.01 0.01 0.01" pos="0 -0.07 0.015" rgba="1 0 0 1" contype="0" conaffinity="0"/>

      <!-- Левое колесо -->
      <body name="left_wheel" pos="-0.07 0.025 -0.015">
        <inertial mass="0.05" pos="0 0 0" diaginertia="1e-7 1e-7 1e-7"/>
        <joint name="left_wheel_joint" type="hinge" axis="1 0 0" damping="0.001" armature="0.01"/>
        <geom type="cylinder" size="0.0175 0.005" rgba="0.3 0.3 0.3 1" euler="0 1.5708 0"/>
      </body>

      <!-- Правое колесо -->
      <body name="right_wheel" pos="0.07 0.025 -0.015">
        <inertial mass="0.05" pos="0 0 0" diaginertia="1e-7 1e-7 1e-7"/>
        <joint name="right_wheel_joint" type="hinge" axis="1 0 0" damping="0.001" armature="0.01"/>
        <geom type="cylinder" size="0.0175 0.005" rgba="0.3 0.3 0.3 1" euler="0 1.5708 0"/>
      </body>

      <!-- Поворотное колесо спереди -->
      <body name="caster" pos="0 -0.07 -0.015">
            <inertial mass="0.5" pos="0 0 0" diaginertia="1e-7 1e-7 1e-7"/>
            <joint name="caster_joint" type="ball" damping="0.000001"/>
            <geom name="caster_ball" type="sphere" size="0.0175" rgba="0.5 0.5 0.5 1" 
                contype="1" conaffinity="1" friction="0.001 0.001 0.001"/>
        </body>
    </body>
  </worldbody>

  <!-- Актуаторы -->
  <actuator>
    <velocity name="left_motor" joint="left_wheel_joint" kv="5" ctrlrange="-50 50" />
    <velocity name="right_motor" joint="right_wheel_joint" kv="5" ctrlrange="-50 50" />
  </actuator>
</mujoco>